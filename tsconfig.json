{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES5",
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__tests__"
  ]
}
